{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "~/*": [
        "*"
      ]
    },
    "baseUrl": "src"
  },
}